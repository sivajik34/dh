{
  "dashboard": {
    "title": "Chatbot System Overview",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "targets": [
          {
            "expr": "sum(rate(chatbot_requests_total[5m])) by (service)",
            "legendFormat": "{{service}}"
          }
        ],
        "type": "graph"
      },
      {
        "id": 2,
        "title": "Response Time P95",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(chatbot_request_duration_seconds_bucket[5m])) by (service, le))",
            "legendFormat": "{{service}}"
          }
        ],
        "type": "graph"
      },
      {
        "id": 3,
        "title": "Active Sessions",
        "targets": [
          {
            "expr": "chatbot_active_sessions",
            "legendFormat": "{{service}}"
          }
        ],
        "type": "stat"
      },
      {
        "id": 4,
        "title": "Intent Distribution",
        "targets": [
          {
            "expr": "sum(chatbot_requests_total) by (intent)",
            "legendFormat": "{{intent}}"
          }
        ],
        "type": "piechart"
      },
      {
        "id": 5,
        "title": "Escalation Rate",
        "targets": [
          {
            "expr": "sum(rate(chatbot_escalations_total[5m]))",
            "legendFormat": "Escalations"
          }
        ],
        "type": "graph"
      },
      {
        "id": 6,
        "title": "LLM Latency",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, sum(rate(llm_response_latency_seconds_bucket[5m])) by (model, le))",
            "legendFormat": "{{model}} P99"
          }
        ],
        "type": "graph"
      },
      {
        "id": 7,
        "title": "Error Rate",
        "targets": [
          {
            "expr": "sum(rate(chatbot_requests_total{status=\"error\"}[5m])) / sum(rate(chatbot_requests_total[5m]))",
            "legendFormat": "Error Rate"
          }
        ],
        "type": "graph"
      }
    ]
  }
}
